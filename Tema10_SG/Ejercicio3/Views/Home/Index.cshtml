@model IEnumerable<Entidades.clsPersona>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3>@ViewBag.Info</h3>

<p>
    <input type="button" value="Create" class="btn btn-primary" onclick="location.href='@Url.Action("Insert")'"/>
   @*  <a asp-action="Insert">Create New</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            
            
            <td>
                <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new {id=item.Id})'"/>
                <input type="button" value="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", new {id=item.Id})'"/>
                <input type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new {id=item.Id})'"/>

                
                @*    
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
                 *@
            </td>
        </tr>
}
    </tbody>
</table>
